<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.weatherapp.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Button text="Hello!" onAction="#onHelloButtonClick"/>
    <TabPane fx:id="tabPane1">
        <Tab fx:id="tbSummary" text="Summary" closable="false">
            <content>
                <VBox>
                    <Label text="Summary of weather for the next 10 days"/>
                </VBox>
            </content>
        </Tab>
        <Tab fx:id="tbCurrentDayForecast" text="Today's Forecast" closable="false">
            <content>
                <VBox>
                    <Label text="Today's forecast is sunny and 75"/>
                </VBox>
            </content>
        </Tab>
    </TabPane>
</VBox>
